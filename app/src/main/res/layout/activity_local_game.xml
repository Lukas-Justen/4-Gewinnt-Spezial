<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.thbingen.movs.lukas.a4gewinntspezial.activities.OnlineGameActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="7"
        android:background="@color/colorPrimary">

        <!--Die 7 Spalten des Spielfeldes vorab angelegt-->
        <LinearLayout
            style="@style/LinearLayoutColumn"
            android:id="@+id/linearlayoutLocal1"
            android:tag="0"/>

        <LinearLayout
            android:id="@+id/linearlayoutLocal2"
            style="@style/LinearLayoutColumn"
            android:tag="1" />

        <LinearLayout
            android:id="@+id/linearlayoutLocal3"
            style="@style/LinearLayoutColumn"
            android:tag="2" />

        <LinearLayout
            style="@style/LinearLayoutColumn"
            android:id="@+id/linearlayoutLocal4"
            android:tag="3" />

        <LinearLayout
            style="@style/LinearLayoutColumn"
            android:id="@+id/linearlayoutLocal5"
            android:tag="4"/>

        <LinearLayout
            style="@style/LinearLayoutColumn"
            android:id="@+id/linearlayoutLocal6"
            android:tag="5" />

        <LinearLayout
            style="@style/LinearLayoutColumn"
            android:id="@+id/linearlayoutLocal7"
            android:tag="6" />

    </LinearLayout>

    <nl.dionsegijn.konfetti.KonfettiView
        android:id="@+id/konfettiView_local"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</FrameLayout>
